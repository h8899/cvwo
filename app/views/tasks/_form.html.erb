<%= form_for @task do |f| %>
 
	<% if @task.errors.any? %>
		<div id="error_explanation">
			<h2>
			<%= pluralize(@task.errors.count, "error") %> prohibited
			this article from being saved:
			</h2>
			<ul>
			<% @task.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
<div class="field form-group">
    <%= f.label :time, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
</div>

<div class="field form-group">
    <%= f.label :action, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :text, class: 'form-control' %>
    </div>
</div>

<div class="field form-group">
    <%= f.label :tag_list, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :tag_list, class: 'form-control' %>
    </div>
</div>

<div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
	</div>
</div>
 
<% end %>