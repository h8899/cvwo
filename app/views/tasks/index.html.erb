<h1>Listing Tasks</h1>
<%= link_to 'New task', new_task_path %>
<%= link_to 'Tags list', controller: 'tags' %>

<%= search_form_for @q do |f| %>
	<%= f.label :Time %>
	<%= f.search_field :title_cont %>
	<%= f.submit %>
<% end %>

<table>
  <tr>
	<th>Status</th>
    <th>Time</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
	  <% if task.completed == true %>
		<td> Completed </td>
	  <% else %>
		<td> Not completed </td>
	  <%end%>
	  
      <td><%= task.title %></td>
      <td><%= task.text %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
  <% end %>
</table>