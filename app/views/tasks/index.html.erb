<h1>Listing Tasks</h1>
<%= link_to new_task_path, remote: true do %>
    <button class="btn btn-default">New</button>
<% end %>
<%= link_to 'Tags list', controller: 'tags' %>
<div id="task-form" style="display:none;"></div>
<table class = 'table table-bordered'>
	<tr>
		<th>Status</th>
		<th>Time</th>
		<th>Action</th>
		<th colspan="3"></th>
	</tr>
 
	<% @tasks.each do |task| %>
		<tr>
			<% if task.completed == true %>
				<td class = 'active'> Completed </td>
			<% else %>
				<td class = 'active'> Not completed </td>
			<%end%> 
			<td>
				<span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{task.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{task.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
				<%= task.title %>
				</span>
			</td>
			<td class = 'info'><%= task.text %>  </td> 
			<td><%= link_to 'Show', task_path(task), class: 'btn btn-primary btn-xs' %></td>
			<td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info btn-xs'  %></td>
			<td><%= link_to 'Destroy', task_path(task),
				  method: :delete,
				  data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
	<% end %>
</table>