<h1>Listing Tags</h1>
<%= link_to "Main_page", controller: 'tasks' %>

<%= search_form_for @q do |f| %>
	<%= f.label :Tag %>
	<%= f.search_field :name_cont %>
	<%= f.submit %>
<% end %>

<table class = 'table'>
  <% @tags.each do |tag| %>
    <tr>
      <td class = 'active'><%= tag.name %></td>
      <td><%= link_to 'Show', tag_path(tag), class: 'btn btn-info btn-xs' %> | 
	  <%= link_to 'Destroy', tag_path(tag),
              method: :delete,
              data: { confirm: 'Are you sure?', class: 'btn btn-danger btn-xs'  } %> </td>
    </tr>
  <% end %>
</table>
